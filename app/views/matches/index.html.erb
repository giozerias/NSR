<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Challenger</th>
      <th>Opponent</th>
      <th class="text-success h4"><strong>Winner</strong></th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= link_to match.id, match_path(match) %></td>
        <td><%= Superhero.find(match.hero_a_id).name %></td>
        <td><%= Superhero.find(match.hero_b_id).name %></td>
        <td class="text-success">
          <strong>
           <%= Superhero.find(match.winner).name %>
          </strong>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_match_path,
            :class => 'btn btn-primary' %>