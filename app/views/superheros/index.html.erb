<%- model_class = Superhero -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:superpower) %></th>
      <th><%= model_class.human_attribute_name(:superscore) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @superheros.each do |superhero| %>
      <tr>
        <td><%= link_to superhero.id, superhero_path(superhero) %></td>
        <td><%= superhero.name %></td>
        <td><%= superhero.city %></td>
        <td><%= superhero.superpower %></td>
        <td><%= superhero.superscore %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_superhero_path(superhero), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      superhero_path(superhero),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_superhero_path,
            :class => 'btn btn-primary' %>
